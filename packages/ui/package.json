{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**",
    "dist"
  ],
  "exports": {
    "./button": {
      "import": {
        "types": "./dist/es/button.d.ts",
        "default": "./dist/es/button.js"
      },
      "require": {
        "types": "./dist/cjs/button.d.cts",
        "default": "./dist/cjs/button.cjs"
      }
    },
    "./card": {
      "import": {
        "types": "./dist/es/card.d.ts",
        "default": "./dist/es/card.js"
      },
      "require": {
        "types": "./dist/cjs/card.d.cts",
        "default": "./dist/cjs/card.cjs"
      }
    },
    "./code": {
      "import": {
        "types": "./dist/es/code.d.ts",
        "default": "./dist/es/code.js"
      },
      "require": {
        "types": "./dist/cjs/code.d.cts",
        "default": "./dist/cjs/code.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "2.5.6",
    "@types/node": "24.5.1",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "bunchee": "6.6.0",
    "eslint": "9.35.0",
    "prettier-plugin-css-order": "2.1.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "@types/react": ">=19",
    "@types/react-dom": ">=19",
    "react": ">=19",
    "react-dom": ">=19"
  }
}
